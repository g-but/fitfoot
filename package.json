{
  "name": "fitfoot",
  "version": "1.0.0",
  "private": true,
  "description": "Fitfoot - Swiss-designed quality footwear and accessories",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:clean": "turbo dev --force",
    "dev:web": "cd apps/web && npm run dev",
    "dev:sanity": "cd packages/sanity && npm run dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "studio": "cd packages/sanity && npm run dev"
  },
  "devDependencies": {
    "@turbo/gen": "^1.13.4",
    "turbo": "^1.13.4",
    "prettier": "^3.0.0",
    "eslint": "^8.57.0",
    "typescript": "^5.2.0"
  },
  "packageManager": "npm@8.15.0",
  "engines": {
    "node": ">=18"
  }
} 